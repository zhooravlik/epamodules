/**
 * Template for filter items block
 *
 * @see Mage_Catalog_Block_Layer_Filter
 */
$hlp = Mage::helper('layered');
$maxUnfoldOptions = Mage::getStoreConfig('layered/general/max_unfolded_options');
?>
<ol>
<?php $counter = 0; ?>
<?php foreach ($this->getItems() as $_item): ?>
    <?php $counter++; ?>
    <li>
        <?php if ($_item->getCount() > 0): ?>
            <p>
            <input type="checkbox" <?php echo $_item->getChecked(); ?> onclick="setLocation('<?php echo $this->urlEscape($_item->getLink()) ?>')">
                <?php echo $hlp->optionNameShorter($_item->getLabel(), 'multiselect') ?>
                <?php if ($this->shouldDisplayProductCount()): ?>
                <span class="count">(<?php echo $_item->getCount() ?>)</span>
                <?php endif; ?>
            </p>
        <?php else: ?>
            <span>
                <?php echo $hlp->optionNameShorter($_item->getLabel(), 'multiselect'); ?>
                <?php if ($this->shouldDisplayProductCount()): ?>
                    <span class="count">(<?php echo $_item->getCount() ?>)</span>
                <?php endif; ?>
            </span>
        <?php endif; ?>
    </li>
    <?php if (
        sizeof($this->getItems()) > $maxUnfoldOptions
        && $counter == $maxUnfoldOptions
    ) : ?>
        </ol>

        <ol style="display: none;">
    <?php endif; ?>
<?php endforeach ?>
</ol>
<?php if (sizeof($this->getItems()) > $maxUnfoldOptions) : ?>
    <span onClick="this.previous('ol').toggle()">Show more items</span>
<?php endif; ?>
